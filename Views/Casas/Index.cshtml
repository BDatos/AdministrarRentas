@model IEnumerable<AdministarRenta.Models.Casa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad_Cuartos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantida_WC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Responsable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad_Cuartos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantida_WC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsable.Direccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CasaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CasaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CasaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
